import os

Import( "env", "rBuildArch", "rBuildOS" )

# All modules that use the tpi are going to need to use the standard pthread library.
env.AppendUnique(
	LIBS=["pthread"]
)


tpi_os_objs = env.SharedObject( ["mali_tpi_" + rBuildOS + ".c"], CPPPATH=[ '$CPPPATH', '#tpi' ] )

Return( 'tpi_os_objs' )
